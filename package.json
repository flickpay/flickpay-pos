{
  "name": "flickpaypos",
  "version": "1.1.15",
  "description": "Official FlickpayPOS Windows application by Rysen",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.rysen.flickpaypos",
    "productName": "FlickpayPOS",
    "files": [
      "main.js",
      "preload.js",
      "config.html",
      "pin.html",
      "assets/**",
      "build/**",
      "print-server/**",
      "package.json",
      "README.txt"
    ],
    "extraResources": [
      {
        "from": "print-server",
        "to": "print-server"
      },
      {
        "from": "assets/fonts",
        "to": "fonts"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "flickpay",
        "repo": "flickpay-pos"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "include": "build/installer.nsh"
    }
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3"
  }
}
